
@inherits MetasGeneralBase

<RadzenCard >
    @if (TituloGrafica.Length > 0)
    {
     <div class="form-grup row">
         <div class="col-sm-2">        </div>
        <div class="col-sm-8">
            <h4>@TituloGrafica</h4>
        </div>
        <div class="col-sm-2">        </div>
     </div>    
    }

    @if (SubTituloGrafiaca.Length > 0)
    {
        <div class="form-grup row">
            <div class="col-sm-2">            </div>
            <div class="col-sm-8">
                <h5>@SubTituloGrafiaca</h5>
            </div>
            <div class="col-sm-2">            </div>
        </div>
        
    } <RadzenSwitch Name="Mostrar" @bind-Value="ShowEtiquetas" />
    <RadzenChart Style="width: 100%; height: 100%;" ColorScheme=@ColorSchemes >
        <RadzenColumnSeries Data="@LaData" CategoryProperty="Titulo" Title=@TituloSerie LineType="LineType.Dotted" ValueProperty="Valor">
            <RadzenSeriesDataLabels Visible="@ShowEtiquetas" />
        </RadzenColumnSeries>
        <RadzenColumnOptions Radius="5" />
        <RadzenValueAxis Formatter="@FormatoY" Min="@MinX">
            <RadzenGridLines Visible="true" />
            <RadzenAxisTitle Text="@TituloY" />
        </RadzenValueAxis>
        <RadzenLegend Position="LegendPosition.Bottom" />
    </RadzenChart>

</RadzenCard>

