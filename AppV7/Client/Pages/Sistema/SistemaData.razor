    @if(ElUsuarioAll != null)
    {
    <RadzenTabs  @bind-SelectedIndex=@selectedIndex>
            <Tabs>
                <RadzenTabsItem Text="Usuarios">
                    @if (ElUsuarioAll.Nivel > UserNivel.Director)
