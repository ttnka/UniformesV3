                                            ElUsuario=@ElUsuarioAll />
                                    </RadzenAccordionItem>
                                </Items>
                            </RadzenAccordion>
                        }
                    <AppV7.Client.Pages.Admin.Usuarios ElUsuario=ElUsuarioAll />
                </RadzenTabsItem>

                <RadzenTabsItem Text="Organizaciones">
                    <AppV7.Client.Pages.Admin.Organizaciones 
                        ElUsuario=@ElUsuarioAll />
                </RadzenTabsItem>

                <RadzenTabsItem Text="Bitacora">

                </RadzenTabsItem>
            </Tabs>
    </RadzenTabs>
    } 
    else
    {
        
    }
</RadzenCard>
